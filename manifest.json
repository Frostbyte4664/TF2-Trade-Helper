{
  "manifest_version": 2,
  "name": "TF2 Trade Helper",
  "version": "0.2",

  "icons": {
    "48": "images/icon.svg",
    "96": "images/icon.svg"
  },

  "content_scripts": [
    {
      "matches": [ "*://steamcommunity.com/tradeoffer/*" ],
      "js": [ "scripts/tradeoffer.js" ]
    },
    {
      "matches": [ "*://backpack.tf/classifieds*" ],
      "js": [ "scripts/classifieds.js" ]
    }
  ]
}